<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp">

        <Button
            android:id="@+id/btn_calculator"
            android:text="@string/MainActivity_btn_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingVertical="10dp"
            android:textSize="16sp"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/btn_questionnaire"
            android:text="@string/MainActivity_btn_questionnaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingVertical="10dp"
            android:textSize="16sp"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/btn_tab"
            android:text="@string/MainActivity_btn_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingVertical="10dp"
            android:textSize="16sp"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/btn_exit"
            android:text="@string/MainActivity_btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textSize="16sp"
            android:backgroundTint="@color/black"/>

    </LinearLayout>
</RelativeLayout>